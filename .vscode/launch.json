    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
        },
        {
            "name": "Python: Python Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
        },
        {
            "name": "Python: Yaml Test 1",
            "type": "python",
            "request": "launch",
            "module": "pandas_etl",
            "console": "integratedTerminal",
            "args": ["--file", "${workspaceFolder}/tests/mockup.yaml"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
        },
        {
            "name": "Python: Yaml Test 2",
            "type": "python",
            "request": "launch",
            "module": "pandas_etl",
            "console": "integratedTerminal",
            "args": ["--file", "${workspaceFolder}/tests/mockup2.yml", "--var", "varName1=varValue1", "varName2=varValue2", "--var", "varName3=varValue3" ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
        }
    ]
}
